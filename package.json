{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate code for a react web app",
  "main": "index.js",
  "repository": "https://github.com/IgorGee/react-boilerplate.git",
  "author": "Igor Goldvekht",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch webpack.config.babel.js --exec 'webpack-dev-server --env development'",
    "build": "webpack --env production",
    "lint:js": "eslint --ignore-path .gitignore --",
    "lint:css": "stylelint",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "precommit": "yarn lint-staged",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint:js",
      "lint:css",
      "test"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "css-loader": "^0.26.2",
    "csv": "^1.1.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "lint-staged": "^3.3.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "next",
    "style-loader": "^0.13.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.0.4",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "express": "^4.15.2",
    "mongodb": "^2.2.24",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "next",
    "styled-components": "^1.4.4",
    "twit": "^2.2.5"
  }
}
